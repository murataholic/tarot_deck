<%= render 'shared/header' %>



<div class="article-lists">

  <div class="search-area">
    <h3>記事を検索する</h3>
    <div class="search-form">
      <%= form_with(url: search_result_articles_path, local: true, method: :get, class: "search-form") do |f| %>
        <%= f.text_field :keyword, class: "search-input" %>
        <%= f.submit "検索", class: "search-btn" %>
      <% end %>
    </div>
    <h3>ジャンルから検索する</h3>
    <div class="genre-box">
      <ul>
        <% @genres.each do |genre|%>
          <li><%=link_to "■#{genre.name}", search_result_articles_path(genre_id: genre.id) %></li>
        <% end %>
      </ul>
    </div>
  </div>
  <% if @articles.empty? %>
  <h3 class="search-result">※お探しの記事は見つかりませんでした。条件を変えて検索してください。</h3>
  <% else %>
  <% @articles.each do |article| %>
    <div class="article-content">
      <div class="description">
      <%# if @current_time < article.created_at.since(7.day) %>
        <div class="ribbon20-wrapper">
          <h3 class="ribbon20">NEW!</h3>
        </div>
      <%# end %>
        <div class="article-title">
          <%= link_to article.title, article_path(article.id) %>
        </div>
        <div class="details">
          <p class="date"><%= article.created_at.to_s(:datetime_jp) %></p>
          <p class="tags">テーマ：<%= article.genre.name %></p> 
        </div>
          <p class="author"><a href="#">by <%= article.user.nickname %></a></p>          
        <div class="text"><%= article.text %>
        </div>
        <%= link_to "Read More", article_path(article.id) %>
      </div>
      <div class="deck-tables">
        <div class="grid-fit">
